<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottom_navigation_height"
    android:background="@color/dark_blue_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:src="@drawable/qrcode"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Brandon Grotesque"
            android:textSize="28sp"
            android:textColor="@color/pale_grey"/>

        <TextView
            android:id="@+id/profile_diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:text="No Dietary Restrictions"
            android:textSize="20sp"
            android:textColor="@color/faded_orange"
            android:textStyle="normal|bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/linearLayout">

            <ImageView
                app:srcCompat="@drawable/github"
                android:id="@+id/image_profile_github"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp" />

            <ImageView
                app:srcCompat="@drawable/resume"
                android:id="@+id/image_profile_resume"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <ImageView
                app:srcCompat="@drawable/personalsite"
                android:id="@+id/image_profile_site"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <ImageView
                app:srcCompat="@drawable/linkedin"
                android:id="@+id/image_profile_linkedin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>