<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/barcode"
            android:layout_width="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:contentDescription="Barcode" />

        <android.support.v7.widget.CardView
            android:id="@+id/userInfoCardOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/personIcon"
                    android:src="@drawable/ic_person_black_36dp"
                    android:tint="@color/accent"
                    android:padding="17dp"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/personIcon"
                    android:layout_toRightOf="@+id/personIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/nameText"
                        android:text="Tommy Yu"
                        android:textSize="20sp"
                        android:textColor="@color/primary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/userInfoCardTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/schoolBlock"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/schoolIcon"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:padding="17dp"
                        android:src="@drawable/ic_domain_black_36dp"
                        android:tint="@color/accent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/schoolIcon"
                        android:layout_toRightOf="@+id/schoolIcon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/schoolText"
                            android:text="University of Illinois"
                            android:textSize="20sp"
                            android:textColor="@color/primary_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </RelativeLayout>

                <View android:background="#d3d3d3"
                    android:layout_width = "match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/schoolBlock"/>

                <RelativeLayout
                    android:id="@+id/graduationBlock"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schoolBlock">

                    <ImageView
                        android:id="@+id/gradIcon"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:padding="17dp"
                        android:src="@drawable/ic_school_black_36dp"
                        android:tint="@color/accent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/gradIcon"
                        android:layout_toRightOf="@+id/gradIcon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/gradText"
                            android:text="Bachelors in Computer Science"
                            android:textSize="17sp"
                            android:textColor="@color/primary_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="May 2019"
                            android:layout_marginTop="2dp"
                            android:layout_below="@+id/gradText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dietCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dietIcon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:padding="17dp"
                    android:src="@drawable/ic_restaurant_black_36dp"
                    android:tint="@color/accent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dietIcon"
                    android:layout_toRightOf="@+id/dietIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/dietText"
                        android:text="No Restrictions"
                        android:textSize="20sp"
                        android:textColor="@color/primary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Diet"
                        android:layout_marginTop="2dp"
                        android:layout_below="@+id/dietText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/professionalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linkedin_link"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/linkedin"
                    android:contentDescription="LinkedIn" />

                <ImageView
                    android:id="@+id/github_link"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/github"
                    android:contentDescription="Github" />

                <ImageView
                    android:id="@+id/resume_link"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/resume"
                    android:contentDescription="Resume" />

                <ImageView
                    android:id="@+id/portfolio_link"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/personalsite"
                    android:contentDescription="PortfolioSite" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</ScrollView>