<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/gq_code"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darkPurple"
            android:layout_marginTop="40dp"
            tools:text="JOHN DOE"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dietary_restrictions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/pink"
            android:layout_marginBottom="35dp"
            tools:text="No Dietary Restrictions"/>

    </LinearLayout>

    <TextView
        android:id="@+id/emergency_contact_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/darkPurple"
        android:text="EMERGENCY CONTACT"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/emergency_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/pink"
        android:layout_marginTop="10dp"
        tools:text="JANE DOE"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/emergency_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/pink"
        tools:text="630 - 000 - 9090"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/emergency_em_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/pink"
        tools:text="jane@doe.com"
        android:layout_marginLeft="20dp"/>
</LinearLayout>
